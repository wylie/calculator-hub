---
import MainLayout from '../layouts/MainLayout.astro';
import MortgagePage from '../react-pages/Mortgage/MortgagePage';

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'How is monthly mortgage payment calculated?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'The calculator uses the standard amortization formula for principal and interest, then adds optional monthly costs like property tax, insurance, and PMI.',
      },
    },
    {
      '@type': 'Question',
      name: 'Does this include taxes and insurance?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Yes. You can add annual property tax and home insurance, and the calculator converts them to monthly amounts and includes them in monthly total.',
      },
    },
    {
      '@type': 'Question',
      name: 'What down payment format can I use?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'You can enter down payment as either a dollar amount or a percentage and toggle between both modes.',
      },
    },
  ],
};
---

<MainLayout
  title="Mortgage Calculator"
  description="Estimate monthly mortgage payment, total interest, loan amount, and first-month breakdown with optional taxes, insurance, and PMI."
  jsonLd={faqSchema}
>

  <MortgagePage client:load />
  <RelatedTools
    tools={[
      { path: '/budget', title: 'Budget Calculator', icon: 'wallet' },
      { path: '/auto-loan', title: 'Auto Loan Calculator', icon: 'directions_car' },
      { path: '/calories', title: 'Calorie Calculator', icon: 'nutrition' },
      { path: '/bike-gear', title: 'Bike Gear Calculator', icon: 'two_wheeler' },
      { path: '/weather', title: 'Weather Converter', icon: 'thermostat' },
      { path: '/net-worth', title: 'Net Worth Calculator', icon: 'account_balance' },
    ]}
  />
</MainLayout>
