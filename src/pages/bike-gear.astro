---
import RelatedTools from '../components/RelatedTools.tsx';
import MainLayout from '../layouts/MainLayout.astro';
import BikeGearPage from '../react-pages/BikeGear/BikeGearPage';
---

<MainLayout title="Bike Gear Calculator">

  <BikeGearPage client:load />
  <RelatedTools
    client:load
    tools={[
      { path: '/budget', title: 'Budget Calculator', icon: 'wallet' },
      { path: '/mortgage', title: 'Mortgage Calculator', icon: 'home' },
      { path: '/auto-loan', title: 'Auto Loan Calculator', icon: 'directions_car' },
      { path: '/calories', title: 'Calorie Calculator', icon: 'nutrition' },
      { path: '/weather', title: 'Weather Converter', icon: 'thermostat' },
      { path: '/net-worth', title: 'Net Worth Calculator', icon: 'account_balance' },
    ]}
  />
</MainLayout>
