import RelatedTools from '../components/RelatedTools.tsx';
import MainLayout from '../layouts/MainLayout.astro';
import WeightPage from '../react-pages/Weight/WeightPage';
import RelatedTools from '../components/RelatedTools.tsx';
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'How do I convert pounds to kilograms?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Multiply pounds by 0.45359237 to get kilograms. This calculator handles conversion automatically both ways.',
      },
    },
    {
      '@type': 'Question',
      name: 'How precise is the conversion?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'The calculator uses standard conversion constants and shows rounded output for readability.',
      },
    },
  ],
};
---

<MainLayout
  title="Weight Converter"
  description="Convert weights between pounds and kilograms quickly with accurate formulas."
  jsonLd={faqSchema}
>

  <WeightPage client:load />
  <RelatedTools
    client:load
    tools={[
      { path: '/height-converter', title: 'Height Converter', icon: 'height' },
      { path: '/bmi', title: 'BMI Calculator', icon: 'favorite' },
      { path: '/calories', title: 'Calorie Calculator', icon: 'nutrition' },
      { path: '/length', title: 'Length Converter', icon: 'straighten' },
      { path: '/area', title: 'Area Converter', icon: 'crop_square' },
    ]}
  />
</MainLayout>
