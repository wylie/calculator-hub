---
import RelatedTools from '../components/RelatedTools.tsx';
import MainLayout from '../layouts/MainLayout.astro';
import NetWorthPage from '../react-pages/NetWorth/NetWorthPage';
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'How is net worth calculated?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Net worth equals total assets minus total liabilities. Positive values indicate assets exceed debts.',
      },
    },
    {
      '@type': 'Question',
      name: 'What should I include as assets?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Common assets include cash, investments, retirement accounts, vehicles, and property values.',
      },
    },
    {
      '@type': 'Question',
      name: 'What should I include as liabilities?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Include mortgage balances, student loans, car loans, credit card debt, and any other outstanding obligations.',
      },
    },
  ],
};
---

<MainLayout
  title="Net Worth Calculator"
  description="Track total assets and liabilities, then calculate your net worth to measure overall financial position."
  jsonLd={faqSchema}
>

  <NetWorthPage client:load />
  <RelatedTools
    client:load
    tools={[
      { path: '/budget', title: 'Budget Calculator', icon: 'wallet' },
      { path: '/mortgage', title: 'Mortgage Calculator', icon: 'home' },
      { path: '/auto-loan', title: 'Auto Loan Calculator', icon: 'directions_car' },
      { path: '/calories', title: 'Calorie Calculator', icon: 'nutrition' },
      { path: '/bike-gear', title: 'Bike Gear Calculator', icon: 'two_wheeler' },
      { path: '/weather', title: 'Weather Converter', icon: 'thermostat' },
    ]}
  />
</MainLayout>
