---
import MainLayout from '../layouts/MainLayout.astro';
import CompoundInterestPage from '../react-pages/CompoundInterest/CompoundInterestPage';
---

<MainLayout title="Compound Interest Calculator">

  <CompoundInterestPage client:load />
  <RelatedTools
    tools={[
      { path: '/interest', title: 'Interest Calculator', icon: 'percent' },
      { path: '/mortgage', title: 'Mortgage Calculator', icon: 'home' },
      { path: '/auto-loan', title: 'Auto Loan Calculator', icon: 'directions_car' },
      { path: '/budget', title: 'Budget Calculator', icon: 'wallet' },
      { path: '/net-worth', title: 'Net Worth Calculator', icon: 'account_balance' },
    ]}
  />
</MainLayout>
