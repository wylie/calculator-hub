---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold text-slate-900 mb-2">Contact</h1>
      <p class="text-slate-600">
        Questions or feedback? We would love to hear from you.
      </p>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900 mb-3">Email</h2>
      <p class="text-sm text-slate-600">
        Reach us at:
        <a
          href="mailto:hello@simplecalculators.io"
          class="text-blue-600 hover:text-blue-700 underline ml-1"
        >
          hello@simplecalculators.io
        </a>
      </p>
    </div>
  </div>
</MainLayout>
